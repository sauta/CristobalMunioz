@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string message = TempData["ErrorMessage"] as string;
    if (!String.IsNullOrEmpty(message))
    {
        <div class="message">
            <p>@message</p>
        </div>
    }
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <h2>Login</h2>

    <form asp-controller="Login" asp-action="Login" method="post">
        <input name="__RequestVerificationToken" type="hidden" value="@Html.AntiForgeryToken()" />

        <div>
            <label for="cEmail">Email:</label>
            <input type="email" id="cEmail" name="cEmail" required />
        </div>

        <div>
            <label for="cPassword">Password:</label>
            <input type="password" id="cPassword" name="cPassword" required />
        </div>

        <button type="submit">Log in</button>
    @*    <div>
            <label for="hash">Hasing:</label>
            <input type="text" id="hash" name="hash" required />
        </div>
        <button type="submit">Log in</button>*@
    </form>
</body>
</html>